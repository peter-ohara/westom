= content_for :breadcrumb do
  %li.breadcrumb-item
    = link_to 'Home', root_path
  %li.breadcrumb-item.active
    Properties

= content_for :actions do
  = link_to new_property_path, class: 'd-none d-sm-inline-block btn btn-sm btn-primary shadow-sm' do
    %i.fas.fa-plus.fa-sm.text-white-50
    Add New Property

%p#notice= notice
.card.shadow-sm.mb-4
  .card-body
    .table-responsive
      %table#dttb-properties.table.table-sm.table-hover{cellspacing: "0", width: "100%"}
        %thead
          %tr
            %th Name
            %th Description
            %th Location
            %th Category
            %th Property type
            %th Contact
        %tfoot
          %tr
            %th Name
            %th Description
            %th Location
            %th Category
            %th Property type
            %th Contact
        %tbody
          - @properties.each do |property|
            %tr
              %td= link_to property.name, property
              %td= property.description
              %td= property.location
              %td= property.category.titleize
              %td= property.property_type.titleize
              %td= link_to property.contact.full_name, property.contact