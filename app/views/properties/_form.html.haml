= simple_form_for @property do |f|
  = f.error_notification
  = f.input :name
  = f.input :description
  = f.input :location
  = f.input :category, collection: Property.categories.keys.map {|category| [category.titleize, category]}
  = f.input :property_type, collection: Property.property_types.keys.map {|p_type| [p_type.titleize, p_type]}
  = f.association :contact, label_method: :full_name, value_method: :id
  = f.submit class: 'btn btn-primary'
