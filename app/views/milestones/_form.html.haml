= form_for @milestone do |f|
  - if @milestone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@milestone.errors.count, "error")} prohibited this milestone from being saved:"
      %ul
        - @milestone.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :due_date
    = f.date_select :due_date
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :target_type
    = f.number_field :target_type
  .field
    = f.label :target
    = f.text_field :target
  .field
    = f.label :department
    = f.number_field :department
  .field
    = f.label :status
    = f.number_field :status
  .actions
    = f.submit 'Save'
