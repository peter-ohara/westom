- if title
  %h2.h6= title
- if collection.count > 0
  .card.mb-4.shadow-sm.expandable-list{id: id}
    .list-group.list-group-flush
      - collection.first(preview).each do |item|
        = capture(item, &block)
    .list-group.list-group-flush.collapse{id: more_id}
      - collection.offset(preview).each do |item|
        = capture(item, &block)
    - if collection.count > preview
      .card-footer.bg-transparent
        .d-flex.w-100.justify-content-between
          = "Total: #{collection.count}"
          %a.card-link.viewMore(data-toggle="collapse" role="button" aria-expanded="false"){ href: "##{more_id}", aria: {controls: "##{more_id}"}}
- else
  .card.mb-4.shadow-sm.expandable-list{id: id}
    .card-body
      No items found in this list