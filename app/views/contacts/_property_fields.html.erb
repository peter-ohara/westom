<li class="nested-fields">
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :location %>
  <%= f.text_area :location %>

  <%= f.label :category %>
  <%= f.select(:category, Property.categories.keys.map {|category| [category.titleize, category]}) %>

  <%= f.label :property_type %>
  <%= f.select(:property_type, Property.property_types.keys.map {|p_type| [p_type.titleize, p_type]}) %>

  <br>
  <br>
  <%= link_to_remove_association 'Remove property', f %>

</li>