%h1 Listing activities

%table
  %thead
    %tr
      %th User
      %th Deal
      %th Title
      %th Description
      %th Due date
      %th Completion date
      %th
      %th
      %th

  %tbody
    - @activities.each do |activity|
      %tr
        %td= activity.user
        %td= activity.deal
        %td= activity.title
        %td= activity.description
        %td= activity.due_date
        %td= activity.completion_date
        %td= link_to 'Show', activity
        %td= link_to 'Edit', edit_activity_path(activity)
        %td= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Activity', new_activity_path
